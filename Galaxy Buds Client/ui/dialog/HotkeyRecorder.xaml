<Window x:Class="Galaxy_Buds_Client.ui.dialog.HotkeyRecorder"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Hotkey Recorder" Height="140" Width="304" KeyUp="HotkeyRecorder_OnKeyUp" KeyDown="HotkeyRecorder_OnKeyDown" 
        ResizeMode="NoResize" Topmost="True" WindowStartupLocation="CenterOwner"
        >
    <Grid>
        <Button Content="Apply" Margin="0,0,10,10" Height="20" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="75" Click="Apply_OnClick"/>
        <Button Content="Cancel" Margin="0,0,96,10" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="75" Click="Cancel_OnClick"/>
        <Label x:Name="KeyString" Content="None" Margin="10,40,10,0" VerticalAlignment="Top" Background="#FFE6E6E6"/>
        <Label Content="Please enter a key-combination (hold down):" HorizontalAlignment="Left" Margin="7,7,0,0" VerticalAlignment="Top"/>
    </Grid>
</Window>
