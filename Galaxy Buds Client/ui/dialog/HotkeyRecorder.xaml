<Window x:Class="Galaxy_Buds_Client.ui.dialog.HotkeyRecorder"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="{DynamicResource hotrec_title}" Height="203.333" Width="304" KeyUp="HotkeyRecorder_OnKeyUp" KeyDown="HotkeyRecorder_OnKeyDown" 
        ResizeMode="NoResize" Topmost="True" WindowStartupLocation="CenterOwner"
        >
    <Grid>
        <Button Content="{DynamicResource apply}" Margin="0,0,10,10" Height="22" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="75" Click="Apply_OnClick"/>
        <Button Content="{DynamicResource cancel}" Margin="0,0,96,10" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="75" Click="Cancel_OnClick" Height="22"/>
        <Label x:Name="KeyString" Content="{DynamicResource hotrec_empty}" Margin="10,40,10,0" VerticalAlignment="Top" Background="#FFE6E6E6"/>
        <Label Content="{DynamicResource hotrec_content}" HorizontalAlignment="Left" Margin="7,7,0,0" VerticalAlignment="Top" Width="281"/>
        <TextBlock TextWrapping="Wrap" Margin="11,73,10,37" Text="{DynamicResource hotrec_note}"/>
    </Grid>
</Window>
