<!DOCTYPE node PUBLIC "-//freedesktop//DTD D-BUS Object Introspection 1.0//EN"
	"http://www.freedesktop.org/standards/dbus/1.0/introspect.dtd">
<node name="/galaxybudsclient">
    <interface name="me.timschneeberger.galaxybudsclient.Application">
        <property name="AppVersion" type="s" access="read"/>
        <property name="HasActiveRegistration" type="b" access="read"/>

        <method name="Activate"/>
        <method name="ShowBatteryPopup" />

        <method name="get">
            <arg name="key" type="s" direction="in"/>
            <arg name="value" type="s" direction="out"/>
        </method>
    </interface>

    <node name="/device">
        <interface name="me.timschneeberger.galaxybudsclient.Device">
            <property name="IsConnected" type="b" access="read"/>

            <property name="LeftBatteryLevel" type="i" access="read"/>
            <property name="RightBatteryLevel" type="i" access="read"/>
            <property name="LeftState" type="s" access="read"/>
            <property name="RightState" type="s" access="read"/>

            <property name="IsFindMyBudsActive" type="b" access="readwrite"/>

            <method name="Connect"/>
        </interface>
    </node>
</node>
